# Source account (user) API credentials from https://my.telegram.org/apps
SOURCE_API_ID=12345
SOURCE_API_HASH=your_api_hash_here
SOURCE_SESSION_STRING=your_session_string_here  # Will be generated on first run

# Bot Token for sending messages (from @BotFather)
TARGET_BOT_TOKEN=your_target_bot_token_here

# Source channel ID (with the minus sign if it's a channel)
SOURCE_CHANNEL_ID=-100123456789

# Target channel ID (with the minus sign if it's a channel)
TARGET_CHANNEL_ID=-100987654321

# Required keywords - message must contain ALL of these (comma-separated)
REQUIRED_KEYWORDS=important,urgent

# Optional keywords - message must contain at least ONE of these (comma-separated)
OPTIONAL_KEYWORDS=sale,discount,offer

# Optional: Minimum message length to forward (default: 0)
MIN_MESSAGE_LENGTH=10 